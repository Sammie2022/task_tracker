<!-- app/views/reports/charts.html.erb -->
<h1>Issue Reports</h1>

<div class="row">
  <div class="col-md-6">
    <h3>Issues by Status</h3>
    <%= pie_chart @issues_by_status, height: "300px", library: {legend: {position: 'right'}} %>
  </div>

  <div class="col-md-6">
    <h3>Issues by Project</h3>
    <%= bar_chart @issues_by_project, height: "300px", library: {legend: {position: 'top'}} %>
  </div>
</div>
