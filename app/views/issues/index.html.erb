<p style="color: green"><%= notice %></p>

<h1>Issues</h1>

<%= link_to 'New Issue', new_issue_path, class: "btn btn-primary mb-3" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.status %></td>
        <td><%= issue.priority %></td>
        <td><%= issue.project.title %></td>
        <td><%= link_to 'Show', issue, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', issue, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

