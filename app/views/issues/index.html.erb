<h1>Issues for Project: <%= @project.title %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Project</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.status %></td>
        <td><%= issue.priority %></td>
        <td><%= issue.project.title %></td>
        <td><%= issue.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to "Show", project_issue_path(@project, issue), class: "btn btn-sm btn-primary" %>
          <%= link_to "Edit", edit_project_issue_path(@project, issue), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", project_issue_path(@project, issue), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to "New Issue", new_project_issue_path(@project), class: "btn btn-success" %>
  <%= link_to "Download Excel", project_issues_path(@project, format: :xlsx), class: "btn btn-outline-primary" %>
  <%= link_to "Download PDF", project_issues_path(@project, format: :pdf), class: "btn btn-outline-secondary", target: "_blank" %>
</div>
